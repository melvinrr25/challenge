<div class="m-panel">
  <div class="m-panel-header"><h3><%= title %></h3></div>
  <div class="m-panel-content">
    <%= form_for(@email_template) do |f| %>

    <% @email_template.errors.full_messages.each { |error| %>
    <div class="alert">
      <%= error %>
    </div>

    <% } %>

    <label>Template name</label>
    <%= f.text_field(:name, autofocus: true, required: true) %>

    <label class= "form-label">Template subject</label>
    <%= f.text_field(:subject, required: true) %>
     
    <label class= "form-label">Template body</label>
    <%= f.text_area(:body, rows: 8, required: true) %>

    <%= f.submit "Save"%>
    <% end %>
  </div>
</div>