<div class="m-panel">
  <div class="m-panel-header">
    <h3>Sign up</h3>
  </div>
  <div class="m-panel-content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true,required: true %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email,required: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off",required: true %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off",required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
